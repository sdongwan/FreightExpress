<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:id="@+id/wuliu_fragment_main_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@android:color/white">
                <!--
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/icon_back" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/wuliu_titlebar_title"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/wuliu_fragment_startplace_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wuliu_fragment_startplace_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出发地"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/wuliu_fragment_startplace_triangle_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_triangle_to_down" />
                </LinearLayout>

                <View
                    android:layout_width="0.01dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:id="@+id/wuliu_fragment_destplace_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wuliu_fragment_destplace_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目的地"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/wuliu_fragment_destplace_triangle_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_triangle_to_down" />
                </LinearLayout>

                <View
                    android:layout_width="0.01dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:id="@+id/wuliu_fragment_paixu_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wuliu_fragment_paixu_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="筛选条件"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/wuliu_fragment_paixu_triangle_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_triangle_to_down" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/wuliu_fragment_main"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/black" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <com.highspace.hs.view.XListView
                android:id="@+id/wuliu_fragment_xListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@drawable/selector_table_item" />
            <View
                android:id="@+id/wuliu_fragment_gray_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>