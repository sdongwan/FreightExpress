<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/login_activity_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户登录"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/darker_gray" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/login_activity_tabs"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/white"
        app:pstsDividerColor="@android:color/white"
        app:pstsIndicatorColor="#f4400a"
        app:pstsIndicatorHeight="5dp"
        app:pstsShouldExpand="true"
        app:pstsUnderlineColor="@android:color/white"
        app:pstsUnderlineHeight="0.1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/login_activity_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>